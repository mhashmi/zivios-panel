use lib "/opt/zivios/asterisk/lib";
use Asterisk::config;
use Getopt::Long;


##args from cmd line
GetOptions ("name=s" 		=> \$name,
			"destiny=s"		=> \$destiny,
			"exten=s" 		=> \$exten);

##

my $rc = new Asterisk::config(file=>'/etc/asterisk/extensions.conf',keep_resource_array=>0);
$name = "TRUNK_".$name;

$rc->assign_addsection(section=>$name);
$rc->assign_append(point=>'foot',section=>$name,data=>"exten => $exten,1,Answer");
$rc->assign_append(point=>'foot',section=>$name,data=>"exten => $exten,2,Goto($destiny)");
$rc->assign_append(point=>'foot',section=>$name,data=>"exten => $exten,3,Hangup()");


$rc->save_file();

