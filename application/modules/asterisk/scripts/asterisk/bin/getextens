use lib "/opt/zivios/asterisk/lib";
use Asterisk::config;
use Getopt::Long;

my $filter = 0;
GetOptions ("section:s" => \$section, "filter:s" => \$filter);

my $rc = new Asterisk::config(file=>'/etc/asterisk/extensions.conf',keep_resource_array=>0);

	$list = $rc->fetch_keys_hashref(section=>$section);
	    while ( my ($key, $value) = each(%$list) ) {
			if (($filter ne "") && ($key =~ m/^$filter+/)) {
				#print "@$value";
				foreach (@$value) {
					print $_ . "\n";
				}
			}
			if ($filter eq 'n') {
                print "$key => ";
                print "@$value";
                print "\n";
			}
		}
